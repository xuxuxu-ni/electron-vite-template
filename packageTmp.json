{
    "name": "<%= name %>",
    "version": "0.0.1",
    "private": true,
    "description": "<%= description %>",
    "author": "<%= author %>",
    "main": "./src/main/dist/index.js",
    "scripts": {
        "dev": "concurrently -n=vite,electron -c=green,blue \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:tools": "./node_modules/.bin/vue-devtools",
        "dev:electron": "node -r ts-node/register script/watch --env=development --watch",
        "build": "concurrently -n=vite,electron -c=green,blue \"npm run build:vite\" \"npm run build:electron\"",
        "build:vite": "vite build",
        "build:electron": "electron-builder",
        "build:electron-win32": "electron-builder --windows nsis:ia32",
        "build:electron:mac": "electron-builder --mac",
        "build:electron:linux": "electron-builder --linux",
        "test:unit": "vue-cli-service test:unit",
        "test:e2e": "vue-cli-service test:e2e",
        "lint": "vue-cli-service lint"
    },
    "build": {
        "productName": "electron-vue-template",
        "appId": "electron-vue-template.zovan",
        "copyright": "©2021 中元健康",
        "directories": {
            "output": "build"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/icon.ico",
            "uninstallerIcon": "public/icon.ico",
            "installerHeaderIcon": "public/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "electron-vue-template"
        },
        "win": {
            "icon": "public/icon.ico",
            "target": [
                {
                    "target": "nsis"
                }
            ]
        },
        "mac": {
            "icon": "public/icon.ico"
        },
        "linux": {
            "icon": "public/icon.ico"
        }
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.3.5",
        "electron-updater": "^4.3.9",
        "figlet": "^1.5.0",
        "vue": "^2.6.11",
        "vue-router": "^3.2.0",
        "vuex": "^3.4.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/lodash": "^4.14.171",
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-e2e-cypress": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-unit-mocha": "~4.5.0",
        "@vue/cli-plugin-vuex": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/devtools": "^5.3.4",
        "@vue/test-utils": "^1.0.3",
        "babel-eslint": "^10.1.0",
        "chai": "^4.1.2",
        "chalk": "^4.1.1",
        "concurrently": "^6.2.0",
        "dotenv": "^10.0.0",
        "electron": "^13.1.6",
        "electron-builder": "^22.11.7",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^6.2.2",
        "minimist": "^1.2.5",
        "sass": "^1.26.5",
        "sass-loader": "^8.0.2",
        "ts-node": "^10.1.0",
        "tslib": "^2.3.0",
        "typescript": "^4.3.5",
        "vite": "^2.4.1",
        "vite-plugin-html": "^2.0.7",
        "vite-plugin-vue2": "^1.7.2",
        "vue-template-compiler": "^2.6.11"
    }
}
